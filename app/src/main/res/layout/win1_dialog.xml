<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/corner"
    android:backgroundTint="@color/app_color"
    android:orientation="vertical"
    tools:context=".win2_dialog">
    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="wrap_content"
        android:layout_height="380dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">


        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/winning_match"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:background="@drawable/corner"
            android:backgroundTint="@color/app_color"
            android:cropToPadding="true"
            app:lottie_autoPlay="true"
            app:lottie_rawRes="@raw/winners"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="41dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@drawable/box"
            android:backgroundTint="@color/app_color"
            android:fontFamily="@font/glory"
            android:gravity="center"
            android:includeFontPadding="false"
            android:padding="10dp"
            android:text="Player 1 Won"
            android:backgroundTintMode="screen"
            android:textColor="@color/white"

            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/winning_match"
            app:layout_constraintStart_toStartOf="@+id/winning_match"
            app:layout_constraintTop_toBottomOf="@+id/winning_match"
            tools:ignore="MissingConstraints" />

    </LinearLayout>

    <ImageView
        android:id="@+id/homeBtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="10dp"
        android:src="@drawable/home1"

        app:layout_constraintBottom_toBottomOf="@+id/linearLayout5"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout5"
        app:layout_constraintHorizontal_bias="0.18"
        app:layout_constraintStart_toStartOf="@+id/linearLayout5"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/refreshBtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="10dp"
        android:src="@drawable/refresh1"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout5"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout5"
        app:layout_constraintHorizontal_bias="0.77"
        app:layout_constraintStart_toStartOf="@+id/linearLayout5"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>